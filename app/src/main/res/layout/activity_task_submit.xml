<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.baodian.com.biaodiangithub.tab1.TaskSubmitActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/bootstrap_brand_danger" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/iv_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/tao" />

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="我的店铺名"
            android:textColor="@color/bootstrap_brand_danger"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="http://taobao.baodian.com"
            android:textColor="@color/bootstrap_brand_danger"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_key_word_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="关键字：宝典"
            android:textColor="@color/bootstrap_brand_danger"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/bootstrap_brand_danger" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_sumbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:text="          提交任务          "
            app:bootstrapBrand="danger"
            app:bootstrapSize="lg" />

        <ImageView
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/btn_sumbit"
            android:src="@color/bootstrap_brand_danger" />

        <LinearLayout
            android:id="@+id/lly_upload"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_above="@+id/btn_sumbit">

            <ImageView
                android:id="@+id/iv_upload1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@mipmap/upload" />

            <ImageView
                android:id="@+id/iv_upload2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@mipmap/upload" />

            <ImageView
                android:id="@+id/iv_upload3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@mipmap/upload" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/lly_upload"
            android:src="@color/bootstrap_brand_danger" />
    </RelativeLayout>
</LinearLayout>
